<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10sp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/manage_report_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Name"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:textColor="#D31313"/>
    <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
        android:id="@+id/manage_report_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_height="300dp"/>
    <TextView
        android:id="@+id/manage_report_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploaded on:"
        android:textSize="18sp"
        android:layout_margin="10sp"
        android:textColor="#000"/>

</LinearLayout>