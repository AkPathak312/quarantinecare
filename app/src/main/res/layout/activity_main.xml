<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/gradientbackground"
                android:layout_height="200dp">

                <androidx.cardview.widget.CardView
                    android:background="#fff"
                    android:elevation="10dp"
                    app:cardElevation="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginRight="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="74dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/profile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:text="Hi,"
                            android:fontFamily="serif-monospace"
                            android:textColor="#000"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/imageView3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="68dp"
                            android:layout_marginLeft="68dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif-monospace"
                            android:text="Guest"
                            android:textColor="@color/colorAccent"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/imageView3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="48dp"
                            android:drawableLeft="@drawable/ic_check_circle_black_24dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text=" Last Image Uploaded on : 3rd April 5:03 PM"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2" />

                        <TextView
                            android:id="@+id/textView0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text=" Hope you are doing well today !"
                            android:textColor="#000"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/imageView3"
                            app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="50dp"
                            android:onClick="gotomyreports"
                            android:src="@drawable/news"
                            android:layout_height="50dp"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:onClick="gotomyreports"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Reports"/>
                    </LinearLayout>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="50dp"
                            android:src="@drawable/profile"
                            android:onClick="gotoMyProfile"
                            android:layout_height="50dp"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:onClick="gotoMyProfile"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Profile"/>
                    </LinearLayout>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:onClick="gotoservices"
                            android:src="@drawable/articlesicon"
                            android:layout_height="50dp"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:onClick="gotoservices"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency"/>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"

                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Update your Picture"
                        android:drawableLeft="@drawable/ic_check_circle_black_24dp"
                        android:textSize="16dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:onClick="clickPhoto"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Let us know about your status of quarantine. Kindly upload a selfie. It'll be verified along with your quarantine location."
                        android:textSize="12dp"
                        android:textColor="#808080"
                        />

                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:background="#00FFFFFF"
                        android:padding="5dp"
                        android:text="Upload Picture"
                        android:onClick="clickPhoto"
                        android:textColor="#87ceeb"
                        android:textSize="12dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:backgroundTint="#fff"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:elevation="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text=" Your Detected Location"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtlocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:fontFamily="serif"
                            android:padding="10dp"
                            android:text="Please enable the location to view\nyour current location"
                            android:textSize="12dp"
                            android:textStyle="italic" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"

                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Covid Extent on Globe "
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="373dp"
                        android:layout_height="113dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:onClick="gotoweb"
                        android:scaleType="fitXY"
                        android:src="@drawable/map" />
                    <TextView
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Know more about cases of Covid-19 across the globe."
                        android:textSize="12dp"
                        android:textColor="#808080"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="end"
                        android:layout_margin="5dp"
                        android:background="#00FFFFFF"
                        android:padding="5dp"
                        android:text="Explore"
                        android:onClick="gotoweb"
                        android:textColor="#87ceeb"
                        android:textSize="12dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell us more about your contacts."
                android:textSize="16dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="reportperson"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have you come across any person whom you find vulnerable or infected. It's time to tell us more about them."
                android:textSize="12dp"
                android:textColor="#808080"
                />
            <Button
                android:layout_width="wrap_content"
                android:onClick="reportperson"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:padding="5dp"
                android:text="Report a Person"
                android:textColor="#87ceeb"
                android:textSize="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:padding="5dp"
                android:text="--- About Us ---"
                android:textColor="#cecece"
                android:textSize="12dp" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:onClick="gotoChatActivity"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_chat_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10sp"
        android:id="@+id/floating_button"
        android:background="#f00"
        android:padding="5sp"
        android:backgroundTint="#f00"
        android:layout_height="wrap_content"/>
</RelativeLayout>