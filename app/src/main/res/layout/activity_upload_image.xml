<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradientbackground"
    android:layout_height="match_parent"
    tools:context=".UploadImage">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:src="@drawable/profile"
        android:id="@+id/imgphoto"
        android:layout_margin="30dp"
        android:layout_width="271dp"
        android:layout_height="293dp" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:onClick="uploadphoto"
        android:padding="2dp"
        android:text="Upload Image" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"
        android:text="The photo and location in background will be verified by officials and any possible change in location will be reported to authority."
        android:textColor="#fff" />

    <Button

        android:id="@+id/btnfinish"
        android:layout_width="200dp"
        android:layout_margin="40dp"
        android:onClick="finishuploading"
        android:layout_height="wrap_content"
        android:text="Finish Uploading"
        android:background="#fff" />
    </LinearLayout>
</ScrollView>