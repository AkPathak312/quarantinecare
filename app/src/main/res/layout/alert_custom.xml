<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10sp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quarantine Care"
            android:layout_margin="5sp"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <View
            android:layout_marginTop="5sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="15sp"
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5sp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_baseline_camera_24" />

            <TextView
                android:id="@+id/fromcameraalert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:text="Manage My Reports"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginLeft="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_baseline_file_copy_24" />

            <TextView
                android:id="@+id/fromgalleryalert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:text="Covid test Requests"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginLeft="20sp" />
        </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancelalert"
            android:layout_margin="10sp"
            android:textSize="15sp"
            android:background="@drawable/round_border"
            android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>