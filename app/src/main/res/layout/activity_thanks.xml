<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanksActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="207dp"
        android:layout_height="456dp"
        app:srcCompat="@drawable/tick" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Thanks !!!\nYour Picture will be verified and location will also be seen.. If location of upload is found other than quarantine location , governemnt and police will be informed."
        android:textColor="#000"
        android:layout_margin="20dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button2"
        android:onClick="goback"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Go To Dashboard"
        android:layout_margin="40dp"
        android:background="@drawable/gradientbackground" />
    </LinearLayout>
</ScrollView>